        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BMS3"
        mc:Ignorable="d" Height="450" Width="800" MouseLeftButtonDown="area_form_MouseLeftButtonDown" Opacity="0.5" Foreground="#FF00F3FF" WindowStyle="None" AllowsTransparency="True" ResizeMode="CanResizeWithGrip">
